<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textExplain99"
            android:text="Designed and developed by Mustafa Hamim"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textWebsite"
            android:layout_below="@id/textExplain99"
            android:text="https://www.google.com"
            android:textColor="#147EDC"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGoBack99"
            android:layout_below="@id/textWebsite"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="GO BACK"/>


    </RelativeLayout>

</RelativeLayout>